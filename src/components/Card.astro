---
import Link from "./Link.astro";
---

<div class="max-w-lg h-auto bg-[#1f1f1f] p-7 rounded-lg leading-[1.5]">
  <article class="flex flex-col justify-center items-center">
    <img
      src="/assets/images/avatar-jessica.jpeg"
      alt="Card Avatar"
      class="w-20 h-20 max-w-full rounded-full object-cover mb-2"
    />
    <header class="text-center flex flex-col justify-center items-center gap-1">
      <h1 class="text-2xl text-white font-semibold">Jessica Randall</h1>
      <p class="text-sm text-[#c5f82a]">
        <strong>London, United Kingdom</strong>
      </p>
    </header>
    <blockquote class="text-sm text-white mt-4 mb-4">
      "Front-end developer and avid reader."
    </blockquote>
    <section class="flex flex-col gap-3 w-full">
      <Link name="Github" url="#" />
      <Link name="Frontend Mentor" url="#" />
      <Link name="LindkedIn" url="#" />
      <Link name="X" url="#" />
      <Link name="Instagram" url="#" />
    </section>
  </article>
  <section class="flex flex-col items-center gap-4"></section>
</div>
